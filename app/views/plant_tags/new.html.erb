<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 mt-5">
      <h1>Add tag for <%= @plant.name %></h1>

      <%= simple_form_for [@plant, @plant_tag] do |f| %>
        <%= f.association :tag , input_html: { multiple: true, class: 'multi-select' }%>
        <%= f.submit "add a tag", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
